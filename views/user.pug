doctype html
html(lang='en')
  head
    title Album
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='../global.css')
    script(src='../index.js', defer)
  body
    include components/header.pug
    //- a(href="/logout") Logout
    main(id="user-main")
        h2= user.current.title
        h3= user.current.artist
        h4= user.current.year
        div(id="current-album", class="album-card")
            img(src=`../assets/cover${user.current.num}.png`) 
        section(id="album-igrid")
            each album in user.history 
                div(class="album-igrid-item")
                    img(src=`../assets/cover${album.num}.png` alt="")              
                    div(class="album-info")
                        p(class="album-title")= album.title
                        p(class="album-artist")= album.artist
                        p(class="album-year")= album.year
    include components/footer.pug